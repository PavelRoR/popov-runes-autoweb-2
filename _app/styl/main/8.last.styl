#last
	padding 100px 0
	text-align center
.last-title
	font-size: 30px
	font-family: RS
	position relative
	display inline-block
	&:before
		@extends .day-1:before
.last-text
	display inline-block
	margin 1.5em 0 3em
	position relative
	&:before
		content: ''
		display block
		position absolute
		width 80px
		height 120px
		background-image url(../img/icons/rune-2.png)
		background-repeat no-repeat
		background-position: center
		background-size: contain
		top -50px
		right 0