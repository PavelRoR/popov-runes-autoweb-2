#plan
	padding 0 0 100px
.day
	padding 0 50% 0 0
	background-repeat no-repeat
	background-position: center right 100px
	background-size: contain
	margin-bottom: 100px
	&-1
		background-image url(../img/images/day-1.png)
	&-2
		background-image url(../img/images/day-2.png)
	&-3
		background-image url(../img/images/day-3.png)
	&-title
		font-size: 20px
		font-family: RS
		margin-bottom: .67em
	&-list
		list-style: none
		font-family: OS
		margin-bottom: 1.5em
	&-bonus
		font-family: OS
		width 100%
		max-width 380px
	&-2
		padding 0 0 0 50%
		background-position: left 100px center
	&-1
	&-3
		position relative
		&:before
			content ''
			display block
			position absolute
			background-image url(../img/icons/rune-1.png)
			background-repeat no-repeat
			background-position: center
			background-size contain
			left 0
			top -30px
			width 80px
			height 120px