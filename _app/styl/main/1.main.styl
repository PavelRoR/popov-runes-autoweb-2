#main
	padding 0 0 100px
	background-image url(../img/backs/main.png)
	background-repeat no-repeat
	background-position: top -30% right -20%
	background-size: 600px auto
.main-img
	width 100%
	max-width 560px
	margin 0 auto
	display block
.main-title
	font-size: 48px
	font-family: RS
	position relative
	&:before
		content ''
		display block
		position absolute
		width 100px
		height 150px
		background-image url(../img/icons/rune-1.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
		top -30px
		left 0
.main-subtitle
	font-size: 22px
	font-family: OS
	margin .67em 0
.main-info
	font-size: 18px
	font-family: R
	margin-bottom: 1.5em
	span
		display inline-block
.form
	border: 1px solid #5C145D;
	border-radius: 15px;
	padding 30px
	width 100%
	max-width 650px
	margin 0 auto
	background-color #fff
	&-main
		width 700px
		max-width none
	&-title
		font-size: 24px
		font-family: RS
		width 100%
		max-width 480px
		margin-bottom: 30px
.input
	border: 2px solid #5C145D;
	box-shadow: 0px 4px 50px rgba(92, 20, 93, 0.24);
	border-radius: 100px;
	padding 16px 20px
	font-size: 18px
	font-family: R
	color rgba(0, 0, 0, 0.4);
	width 100%
	max-width 350px
	display block
	float left
	&-mail-main
		max-width: 300px
.button-form
	max-width: 300px
	float: right
.button-form-main
	max-width: 300px
@-webkit-keyframes autofill {
	to {
		font-size: 18px
		color: rgba(0, 0, 0, 0.4)
		background-color: #fff;
	}
}

input:-webkit-autofill {
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;

}
.alert-message {
	clear both
	display: none;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align center
}
.checking {
	display: table;
	width 100%
	max-width 515px
	margin: 20px 0 0
	text-align: left
}

.checking .check-label {
	line-height: 20px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 45px;
	text-align: left;
	font-size: 16px
}

.checking .check-label a
	border-bottom: 1px dotted
	display: inline
	&:focus
		text-decoration: underline
		color #000
	&:hover
		text-decoration: none
		color #000
		border-bottom: 0
.checking .check-label:before {
	content: '';
	background-color: red
	position: absolute;
	left: 0;
	top: 3px;
	width: 31px;
	height: 31px;
	border 1px solid #5C145D
	border-radius: 3px
}

.checking .check-label:after {
	content: '';
	position: absolute;
	left: 10px;
	top: -10px;
	width: 11px;
	height: 18px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 1px solid #5C145D
	border-right: 1px solid #5C145D
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;

}

.check {
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
}

.check:checked + .check-label:before {
	background-color: transparent

}

.check:checked + .check-label:after {
	opacity: 1;
	top: 7px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
}