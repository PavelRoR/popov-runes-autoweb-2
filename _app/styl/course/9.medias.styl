@media screen and (min-width 1900px)
	#main
		background-position: top -60px right -100px
		background-size: 500px
@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	#main
		background-position: top -75px right -150px
		background-size: 700px
	header
		margin-bottom: 100px
@media screen and (max-width 1199px)
	#main
		background-position: bottom 75px right -250px
	.contact-email
		margin 0 10px
@media screen and (max-width 992px)
	#main
	#lets
	#plan
	#revs
		padding 0 0 50px
	.main-title
		margin-top: 30px
	#about
		padding 30px 0 50px
	.general-title
		margin-bottom: 30px
	.lets-items
	.plan-packet
		padding 20px
	#technics
		padding 0 0 20px
	.features-text:last-child
		margin-bottom: 40px
	.modal
		padding 20px
	#author
	#last
		padding 50px 0
@media screen and (max-width 767px)
	header
		padding 10px 0
		margin-bottom: 0
	.header-contacts
		line-height: 1
	.contact-email
		margin 0 0 0 10px
	.header-social
		height 20px
		max-width 83%
		justify-content flex-end
		margin-top: 5px
		float: right
	.header-social-link
		margin-left: 10px
	.general-title
		font-size: 26px
	.main-title
		font-size: 40px
	.about-text
		max-width none
	.plan-packet-title
	.plan-packet-subtitle
		margin-bottom: 10px
		small
			margin-top: 0
	.plan-packet-list li
		margin-bottom: 10px
		&:last-child
			margin-bottom: 30px
	.plan-packet-text
		margin-bottom: 10px
	.plan-packet-img
		margin-top: 30px
	.features-img
		margin-bottom: 30px
	.packet
		margin 0 auto 20px
	.prepayment
		margin-top: 10px
	.revs-text
		margin-bottom: 60px
	.last-text
		margin 20px 0 40px
@media screen and (max-width 600px)
	.revs-text-img
		height 100px
@media screen and (max-width 485px)
	.contact
		font-size: 13px
	.main-title
		font-size: 32px
	.last-title
		font-size: 24px
	.last-text
		font-size: 16px
		margin 1em 0 2em
	.main-info
		margin-bottom: 30px
	.about-title
		font-size: 20px
		margin-bottom: 15px
	.author-text
	.lets-items-text
		margin-bottom: 10px
	.plan-packet-title
		font-size: 22px
		small
			font-size: 20px
	.plan-packet-subtitle
		font-size: 20px
		small
			font-size: 20px
	footer
		padding 10px 0
@media screen and (max-width 385px)
	header
		.col-xs-10
			width 100%
	.header-logo
		width 80px
		height 38px
	.header-social
		max-width none
		float: none
	.header-social
		justify-content: center
		margin-top: -5px
	.header-social-link
		margin 0 4px
		&-fb
			margin 0
	.contact
		display block
		margin-bottom: 5px
	.button
		font-size: 16px
	.main-title
		font-size: 26px
	.general-title
		font-size: 22px
	.revs-text-img
		height 100px
	.last-title
		font-size: 20px
	#last
		padding 60px 0 30px
	.about-title
	.about-text
		font-size: 18px
	.cost-full, .cost-today
		font-size: 22px
	.prepayment-text
		margin 5px 0 15px
		font-size: 18px