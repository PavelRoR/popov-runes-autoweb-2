#main
	padding 0 0 100px
	min-height calc(100vh - 62px)
	background-image url(../img/backs/promo.png)
	background-repeat no-repeat
	background-position: top -50px right -100px
	background-size: 400px auto
.main-container
	padding 40px
	border-radius: 15px
	border: 1px solid #5C145D;
	position relative
	margin-bottom: 30px
	&:before
		content ''
		display block
		position absolute
		top -30px
		left -40px
		width 80px
		height 120px
		background-image url(../img/icons/rune-2.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
	&:after
		content ''
		display block
		position absolute
		bottom -75px
		right 40px
		width 100px
		height 150px
		background-image url(../img/icons/rune-3.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
.main-title
	text-align center
	font-size: 26px
	font-family: RS
	margin-bottom: 30px
.main-subtitle
	font-size: 20px
	font-family: OS
	text-align center
	span
		width 100%
		max-width 600px
		font-size: 28px
		font-family: RS
		display block
		margin 30px auto
.inputblock
	width 100%
	max-width 350px
	margin 0 auto 20px
.intl-tel-input
	display block
.input
	border: 2px solid #5C145D;
	box-shadow: 0px 4px 50px rgba(92, 20, 93, 0.24);
	border-radius: 100px;
	padding 16px 20px
	font-size: 18px
	font-family: R
	color rgba(0, 0, 0, 0.4);
	width 100%
	display block
	margin 0 auto 20px
.intl-tel-input .country-list .country
	width 100%
	max-width: 334px
.intl-tel-input.allow-dropdown .flag-container:hover .selected-flag
	border-bottom-left-radius: 30px;
	border-top-left-radius: 30px;
.button-form
	max-width: 300px
@-webkit-keyframes autofill {
	to {
		font-size: 18px
		color: rgba(0, 0, 0, 0.4)
		background-color: #fff;
	}
}

input:-webkit-autofill {
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;

}
.alert-message {
	clear both
	display: none;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align center
}
.checking {
	display: table;
	width 100%
	max-width 350px
	margin: 10px auto 0
	text-align: left
}

.checking .check-label {
	line-height: 20px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 45px;
	text-align: left;
	font-size: 16px
}

.checking .check-label a
	border-bottom: 1px dotted
	display: inline
	&:focus
		text-decoration: underline
		color #000
	&:hover
		text-decoration: none
		color #000
		border-bottom: 0
.checking .check-label:before {
	content: '';
	background-color: red
	position: absolute;
	left: 0;
	top: 3px;
	width: 31px;
	height: 31px;
	border 1px solid #5C145D
	border-radius: 3px
}

.checking .check-label:after {
	content: '';
	position: absolute;
	left: 10px;
	top: -10px;
	width: 11px;
	height: 18px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 1px solid #5C145D
	border-right: 1px solid #5C145D
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;

}

.check {
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
}

.check:checked + .check-label:before {
	background-color: transparent

}

.check:checked + .check-label:after {
	opacity: 1;
	top: 7px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
}
