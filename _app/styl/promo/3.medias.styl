@media screen and (min-width 1900px)
	#main
		background-position: top -60px right -100px
		background-size: 500px
@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	#main
		background-position: top -75px right -150px
		background-size: 700px
	header
		margin-bottom: 100px
	.main-container
		padding 90px
	.button-bots
		margin-top: 60px
@media screen and (max-width 1199px)
	.contact-email
		margin 0 10px
@media screen and (max-width 767px)
	header
		padding 10px 0
		margin-bottom: 0
	.header-contacts
		line-height: 1
	.contact-email
		margin 0 0 0 10px
	.header-social
		min-height 20px
		max-width 83%
		justify-content flex-end
		margin-top: 5px
		float: right
	.header-social-link
		margin-left: 10px
	.main-container
		padding 30px
	.main-container:after
		right 0
	.fancybox-content
		padding 25px
	.button-bots:before
		top -30px
		left 0
		right 0
		text-align center
@media screen and (max-width 485px)
	.contact
		font-size: 13px
	.main-container
		padding 20px
	.main-title
		font-size: 22px
	#Politics .modal-title
		font-size: 22px
		margin-bottom: 20px
	#Politics p
		margin-bottom: 10px
	.intl-tel-input .country-list
		white-space: nowrap;
	.main-subtitle span
		font-size: 22px
		margin 20px 0
	.bots-link
		padding 30px 0 0
		background-size: 30px 30px
		font-size: 16px
	.bots
		margin-top: 0
@media screen and (max-width 385px)
	header
		.col-xs-10
			width 100%
	.header-logo
		width 80px
		height 38px
	.header-social
		max-width none
		float: none
	.header-social
		justify-content: center
		margin-top: -5px
	.header-social-link
		margin 0 4px
		&-fb
			margin 0
	.contact
		display block
		margin-bottom: 5px
	.main-title
		font-size: 18px
		margin-bottom 15px
	.main-subtitle
		font-size: 18px
		span
			font-size: 20px
			margin 10px 0
	.intl-tel-input .country-list
		white-space: normal;
	#Politics .modal-title
		font-size: 18px
		small
			font-size: 14px
	#Politics p
		font-size: 16px
	footer
		padding 10px 0
	.button
		font-size: 16px